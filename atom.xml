---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.name }}</title>
  <link href="{{ site.url }}/atom.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}/</id>
  {% if site.author %}
  <author>
    <name>{{ site.author }}</name>
    {% if site.email %}<email>{{ site.email }}</email>{% endif %}
  </author>
  {% endif %}

  {% for post in site.posts %}

  {% assign categories = post.category %}
  {% if categories == nil %}
    {% assign categories = post.categories %}
  {% endif %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="{{ site.url }}{{ post.url | url_encode }}"/>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>{{ site.url }}{{ post.id | url_encode }}</id>
    {% if post.category %}
      <category term="{{ post.category }}"/>
    {% endif %}
    {% if post.category == nil and post.categories.size > 0 %}
      {% for category in post.categories %}
      <category term="{{ category }}"/>
      {% endfor %}
    {% endif %}
    <content type="html">
      {{ post.content | xml_escape }}
    </content>
  </entry>
  {% endfor %}

</feed>
